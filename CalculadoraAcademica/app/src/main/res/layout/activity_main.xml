<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nota1"
            android:hint="Informe sua nota"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:inputType="number"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/nota2"
            android:hint="Informe sua nota"
            app:layout_constraintTop_toBottomOf="@id/nota1"
            app:layout_constraintStart_toStartOf="@id/nota1"
            app:layout_constraintEnd_toEndOf="@id/nota1"
            android:layout_marginTop="25dp"
            android:layout_marginStart="4dp"
            app:layout_constraintHorizontal_bias="1.0" android:inputType="number"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/faltas"
            android:hint="Quantidade de faltas"
            app:layout_constraintTop_toBottomOf="@id/nota2"
            app:layout_constraintStart_toStartOf="@id/nota2"
            app:layout_constraintEnd_toEndOf="@id/nota2"
            android:layout_marginTop="25dp"
            android:layout_marginStart="4dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/faltas"
            android:id="@+id/calcula"
            tools:layout_editor_absoluteY="461dp"
            tools:layout_editor_absoluteX="125dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultado"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calcula"
            app:layout_constraintVertical_bias="0.09"/>


</androidx.constraintlayout.widget.ConstraintLayout>